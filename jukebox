#!/bin/bash
# polarhive.net/jukebox
set -e
export priority=false
export ytm_backend=false

# config
username=polarhive
mode=mix

# variables
music_folder="Music" && cd ~/$music_folder/.tmp/dl
ytargs="--ignore-config -x -q --progress --format bestaudio"

# help
usage() {
    echo "jukebox -h"
    echo "  -a: <artist name>"
    echo "  -g: <genre name>"
    echo "  -s: <song name>"
    echo ""
    echo "  -u: <lastfm: username>"
    echo "  -m: <lastfm: mix | recommended | library>"
    echo ""
    echo "  -l: vosk: uses your mic to search songs"
    echo "  -y: use ytmusic tags for songs"
    echo "  -c: top charts in your region (setup your api_key)"
    exit 1
}

# santizie input
clean() {
    q=$(echo $q | tr ' ' '+')
}

# quit if offline
net() {
    notify-send "network error"
    exit 1
}

play_user() {
    response=$(curl -s "https://www.last.fm/player/station/user/${username}/${mode}") || net
    loop
}

play_artist() {
    response=$(curl -s "https://www.last.fm/player/station/music/${q}") || net
    loop
}

play_genre() {
    response=$(curl -s "https://www.last.fm/player/station/tag/${q}") || net
    loop
}

play_song() {
    export ytm_backend=true
    export priority=true
    dl
    queue
}

# parse playlist
loop() {
    notify-send "queueing"
    length=$(jq -r '.playlist | length' <<< "$response")
    for ((i=0; i<length; i++))
    do
        id="$(jq -r ".playlist[$i].playlinks[0].id" <<< "$response")"
        a="$(jq -r ".playlist[$i].artists[0].name" <<< "$response")"
        t="$(jq -r ".playlist[$i].name" <<< "$response")"
        export q="$a - $t"
        dl
        queue
    done
    notify-send "finished queueing"
}

# download song
dl() {
    if [ "$ytm_backend" = true ]; then
        yt-dlp ${ytargs} --playlist-end 1 --default-search "https://music.youtube.com/search?q=" "$q" --parse-metadata "title:%(title)s" --parse-metadata "artist:%(artist)s" --add-metadata -o '%(artist)s - %(title)s.%(ext)s'
    else
        yt-dlp ${ytargs} --postprocessor-args "ffmpeg:-metadata title=${t@Q} -metadata artist=${a@Q}" -o "$a - $t.%(ext)s" "$id"
    fi
}

# queue song
queue() {
    rm ~/$music_folder/.tmp/dl/*.part -f && mpc -q update
    sleep 0.1

    if [ $? -ne 0 ]; then
        notify-send "ERROR: skipping"
        break
    else
        name=$(ls -u | head -1)
        if [ "$priority" = true ]; then
            mpc -q insert ".tmp/dl/${name}"
            if [ "$(mpc playlist | wc -l)" -eq 0 ]; then
                mpc -q play
            else
                mpc -q play && mpc -q next
            fi
        else
            mpc -q add ".tmp/dl/${name}" && mpc -q play
        fi
        echo "queueing: $name"
    fi
}

# flags
while getopts ":a:g:s:y:u:m:clh" opt; do
    case $opt in
        a)
            q="$OPTARG" && clean
            play_artist
            ;;
        g)
            q="$OPTARG" && clean
            play_genre
            ;;
        s)
            export q="$OPTARG"
            play_song
            ;;
        y)
            export ytm_backend=true
            play_user
            ;;
        u)
            export username="$OPTARG"
            play_user
            ;;
        m)
            export mode="$OPTARG"
            play_user
            ;;
        h)
            usage
            ;;
        l)
            ~/.local/repos/jukebox/listen
            ;;
        c)
            ~/.local/repos/jukebox/charts
            ;;
        \?)
            echo "Invalid option: -$OPTARG"
            usage
            ;;
        :)
            echo "Option -$OPTARG requires an argument."
            ;;
    esac
done
if [ $OPTIND -eq 1 ]; then
    play_user
fi
